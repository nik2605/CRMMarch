@model CRM.Models.ProfileDataModel

@{
    ViewBag.Title = "Create Page";
}


@using (Html.BeginForm("Create", "Home", FormMethod.Post))
{

    @Html.AntiForgeryToken()

    <h3><b>Create User Profile</b></h3>

    <div class="form-group">
        <div class="row">
            <div class="col-lg-2 col-md-2 col-sm-3">
                @Html.LabelFor(m => m.FName)
            </div>
            <div class="col-lg-2 col-md-2 col-sm-3">
                @Html.TextBoxFor(m => m.FName)
                @Html.ValidationMessageFor(a => a.FName)
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-lg-2 col-md-2 col-sm-3">
                @Html.LabelFor(m => m.LName)
            </div>
            <div class="col-lg-2 col-md-2 col-sm-3">
                @Html.TextBoxFor(m => m.LName)
                @Html.ValidationMessageFor(a => a.LName)
            </div>
        </div>
    </div>

    <input type="submit" class="btn btn-default" value="Submit" />

}
